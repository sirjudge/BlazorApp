@page "/DndHelpers"
<h3>DndHelpers</h3>

<div id="diceRoller">
    Dice roller
    Number of Dice to roll:<input type="text" @bind="NumDiceToRollString">
    Number of sides:<input type="text" @bind="InputRollNumberString" val>
    
    <button type="button" onclick="">Roll</button>
    <p role="status"> your rolled number is: @NumberRolled</p>
</div>


@code {
    private string NumDiceToRollString = "";
    private string InputRollNumberString = "";
    private long NumberRolled = 0;

    private void Roll()
    {
        if (
            long.TryParse(NumDiceToRollString, out var numDice) &&
            long.TryParse(InputRollNumberString, out var inputRoll)
            )
            NumberRolled = numDice * inputRoll;


    }
}